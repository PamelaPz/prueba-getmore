.card
    width: 16rem;
    margin: auto;
    overflow: hidden;
    background-color: $bg_gray;
    border-radius: 1.4rem;
    position relative
    @media screen and (min-width 768px)
        width: 18rem;

    &-circle
        position absolute
        top 1rem
        left 1rem
        height 35px
        width 35px
        background-color $green
        border-radius 5rem
        display flex
        justify-content center
        align-items center
        span
            text-align center
            color $white

.ssr-carousel-arrows
    .ssr-carousel-back-icon, .ssr-carousel-next-icon
        background-color $green

    .ssr-carousel-next-icon
        &:before
            border-width: 6px 0 6px 8px
            left 1px
    .ssr-carousel-back-icon
        &:before
            border-width: 6px 8px 6px 0
            left -1px
        
    :not([disabled]) > .ssr-carousel-back-icon, :not([disabled]) > .ssr-carousel-next-icon
        opacity 1
        box-shadow none
        transition all .2s ease-in
        &:hover
            box-shadow 0 5px 9px 0 rgba(0, 0, 0, 0.5)
    [disabled] > .ssr-carousel-back-icon, [disabled] > .ssr-carousel-next-icon
        cursor: default
        opacity: .5
        background-color: $green !important
        border: 2px solid $green


    @media screen and (min-width 768px)
        position absolute
        bottom 2rem
        left -64%
        .ssr-carousel-back-button, .ssr-carousel-next-button
            position relative
            transform translateY(0)
        .ssr-carousel-next-button
            right -24%
        
        [disabled] > .ssr-carousel-back-icon, [disabled] > .ssr-carousel-next-icon
            opacity: .9
            background-color: transparent !important
            border: 2px solid $white
    @media screen and (min-width 900px)
        left -53%
    @media screen and (min-width 1024px)
        bottom 0
        left -38%
    @media screen and (min-width 1440px)
        left -34%


.ssr-carousel-dots
    .ssr-carousel-dot-icon
        border none
        width 12px
        height 12px
        margin-right 15px
        margin-left 15px
        margin-top 1rem
    [disabled] > .ssr-carousel-dot-icon
        background-color $green
    :not([disabled]) > .ssr-carousel-dot-icon
        opacity 1
        background-color $bg_grayL
    @media screen and (min-width 768px)
        position absolute
        bottom 8rem
        left 19%
        .ssr-carousel-dot-icon
            width 8px
            height 8px
            margin-left 0
            margin-right 15px
            margin-top 0
    @media screen and (min-width 900px)
        left 17%
        bottom 9rem
    @media screen and (min-width 1024px)
        left 16%
        bottom 8.5rem

